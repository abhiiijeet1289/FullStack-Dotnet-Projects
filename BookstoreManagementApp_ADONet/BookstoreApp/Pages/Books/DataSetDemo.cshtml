@page "/Books/DataSetDemo"
@model BookstoreApp.Pages.Books.DataSetDemoModel
@{
    ViewData["Title"] = "DataSet Demo";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>DataSet and DataTable Operations Demo</h3>
                <p class="mb-0">This page demonstrates disconnected data operations using ADO.NET DataSet and DataTable.</p>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <form method="post">
                            <button type="submit" asp-page-handler="LoadDataSet" class="btn btn-primary">Load DataSet</button>
                            <button type="submit" asp-page-handler="UpdateDataSet" class="btn btn-success">Update Database from DataSet</button>
                        </form>
                    </div>
                    <div class="col-md-6 text-end">
                        <span class="badge bg-info">Total Rows: @Model.DataTable?.Rows.Count</span>
                    </div>
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (Model.DataTable != null && Model.DataTable.Rows.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    @foreach (System.Data.DataColumn column in Model.DataTable.Columns)
                                    {
                                        <th>@column.ColumnName</th>
                                    }
                                    <th>Row State</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.DataTable.Rows.Count; i++)
                                {
                                    var row = Model.DataTable.Rows[i];
                                    <tr class="@GetRowStateClass(row.RowState)">
                                        @for (int j = 0; j < Model.DataTable.Columns.Count; j++)
                                        {
                                            <td>
                                                @if (Model.DataTable.Columns[j].ColumnName == "Price")
                                                {
                                                    @($"${Convert.ToDecimal(row[j]):F2}")
                                                }
                                                else if (Model.DataTable.Columns[j].ColumnName.Contains("Date"))
                                                {
                                                    @(Convert.ToDateTime(row[j]).ToString("MM/dd/yyyy HH:mm"))
                                                }
                                                else
                                                {
                                                    @row[j]
                                                }
                                            </td>
                                        }
                                        <td>
                                            <span class="badge @GetRowStateBadgeClass(row.RowState)">@row.RowState</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <h5>DataSet Information:</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Dataset Name: @Model.DataSet?.DataSetName</li>
                            <li class="list-group-item">Tables Count: @Model.DataSet?.Tables.Count</li>
                            <li class="list-group-item">Has Changes: @(Model.DataSet?.HasChanges() == true ? "Yes" : "No")</li>
                            <li class="list-group-item">Accept Changes Status: @(Model.DataTable?.HasErrors == true ? "Has Errors" : "No Errors")</li>
                        </ul>
                    </div>

                    <!-- Demo operations -->
                    <div class="mt-4">
                        <h5>DataTable Operations Demo:</h5>
                        <form method="post" class="row g-3">
                            <div class="col-md-3">
                                <input type="text" name="newTitle" placeholder="New Title" class="form-control" required />
                            </div>
                            <div class="col-md-3">
                                <input type="text" name="newAuthor" placeholder="New Author" class="form-control" required />
                            </div>
                            <div class="col-md-2">
                                <input type="text" name="newISBN" placeholder="ISBN" class="form-control" required />
                            </div>
                            <div class="col-md-2">
                                <input type="number" name="newPrice" placeholder="Price" step="0.01" class="form-control" required />
                            </div>
                            <div class="col-md-2">
                                <button type="submit" asp-page-handler="AddRowToDataTable" class="btn btn-info">Add Row</button>
                            </div>
                        </form>
                    </div>
                }
                else
                {
                    <div class="text-center p-4">
                        <p class="lead">No data loaded. Click "Load DataSet" to begin.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetRowStateClass(System.Data.DataRowState rowState)
    {
        return rowState switch
        {
            System.Data.DataRowState.Added => "table-success",
            System.Data.DataRowState.Modified => "table-warning",
            System.Data.DataRowState.Deleted => "table-danger",
            System.Data.DataRowState.Unchanged => "",
            _ => ""
        };
    }

    private string GetRowStateBadgeClass(System.Data.DataRowState rowState)
    {
        return rowState switch
        {
            System.Data.DataRowState.Added => "bg-success",
            System.Data.DataRowState.Modified => "bg-warning",
            System.Data.DataRowState.Deleted => "bg-danger",
            System.Data.DataRowState.Unchanged => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}