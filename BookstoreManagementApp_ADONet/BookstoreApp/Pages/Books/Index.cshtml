@page "/Books"
@model BookstoreApp.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Books";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Book Management</h2>
            <a asp-page="./Create" class="btn btn-primary">Add New Book</a>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Books List (@Model.Books.Count)</h5>
                    </div>
                    <div class="col-md-6">
                        <form method="post" class="d-flex">
                            <input type="text" name="searchTerm" class="form-control me-2" placeholder="Search books..." value="@Model.SearchTerm">
                            <button type="submit" asp-page-handler="Search" class="btn btn-outline-secondary">Search</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Books.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>ISBN</th>
                                    <th>Price</th>
                                    <th>Year</th>
                                    <th>Genre</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var book in Model.Books)
                                {
                                    <tr>
                                        <td>@book.Title</td>
                                        <td>@book.Author</td>
                                        <td>@book.ISBN</td>
                                        <td>$@book.Price.ToString("F2")</td>
                                        <td>@book.PublishedYear</td>
                                        <td>@book.Genre</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-page="./Details" asp-route-id="@book.BookId" class="btn btn-sm btn-info">View</a>
                                                <a asp-page="./Edit" asp-route-id="@book.BookId" class="btn btn-sm btn-warning">Edit</a>
                                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(book.BookId)">
                                                    Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center p-4">
                        <p class="lead">No books found.</p>
                        <a asp-page="./Create" class="btn btn-primary">Add your first book</a>
                    </div>
                }
            </div>
        </div>

        <!-- Toggle buttons for different data access methods -->
        <div class="mt-3">
            <div class="btn-group" role="group">
                <form method="post" style="display: inline;">
                    <button type="submit" asp-page-handler="LoadWithReader" class="btn btn-outline-primary">Load with SqlDataReader</button>
                </form>
                <form method="post" style="display: inline;">
                    <button type="submit" asp-page-handler="LoadWithStoredProcedure" class="btn btn-outline-success">Load with Stored Procedures</button>
                </form>
                <a asp-page="./DataSetDemo" class="btn btn-outline-info">DataSet Demo</a>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modals -->
@foreach (var book in Model.Books)
{
    <div class="modal fade" id="deleteModal@(book.BookId)" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete "<strong>@book.Title</strong>" by @book.Author?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@book.BookId" />
                        <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}