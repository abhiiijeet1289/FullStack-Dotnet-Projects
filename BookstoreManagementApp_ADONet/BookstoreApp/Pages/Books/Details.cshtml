@page "/Books/Details/{id:int}"
@model BookstoreApp.Pages.Books.DetailsModel
@{
    ViewData["Title"] = "Book Details";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Book Details</h3>
                <div>
                    <a asp-page="./Edit" asp-route-id="@Model.Book.BookId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="./Index" class="btn btn-secondary btn-sm">Back to List</a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Title:</dt>
                            <dd class="col-sm-8">@Model.Book.Title</dd>
                            
                            <dt class="col-sm-4">Author:</dt>
                            <dd class="col-sm-8">@Model.Book.Author</dd>
                            
                            <dt class="col-sm-4">ISBN:</dt>
                            <dd class="col-sm-8">@Model.Book.ISBN</dd>
                            
                            <dt class="col-sm-4">Genre:</dt>
                            <dd class="col-sm-8">@(Model.Book.Genre ?? "Not specified")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Price:</dt>
                            <dd class="col-sm-8">$@Model.Book.Price.ToString("F2")</dd>
                            
                            <dt class="col-sm-4">Published Year:</dt>
                            <dd class="col-sm-8">@Model.Book.PublishedYear</dd>
                            
                            <dt class="col-sm-4">Created:</dt>
                            <dd class="col-sm-8">@Model.Book.CreatedDate.ToString("MM/dd/yyyy HH:mm")</dd>
                            
                            <dt class="col-sm-4">Updated:</dt>
                            <dd class="col-sm-8">@Model.Book.UpdatedDate.ToString("MM/dd/yyyy HH:mm")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>